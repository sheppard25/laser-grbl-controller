    "build": "react-scripts build",
    "test": "react-scripts test"
  },
  "keywords": ["laser", "grbl", "cnc", "electron", "react"],
  "author": "sheppard25",
  "license": "MIT",
  "dependencies": {
    "electron": "^33.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "serialport": "^13.0.0",
    "react-draggable": "^4.4.6",
    "react-zoom-pan-pinch": "^3.6.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "wait-on": "^8.0.1"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  }
